---
import { certificates } from "../../../cv.json";
---

<section>
  <h3>{certificates.length > 1 ? "Certificados" : "Certificado"}</h3>
  <ul>
    {
      certificates?.map((certificate) => {
        return (
          <li>
            <a href={certificate.url} title={certificate.name} target="_blank">
              <img src={certificate.img} alt={certificate.name} />
            </a>
            <div class="data">
              <span class="name">{certificate.name}</span>
              <span>
                En: <b>{certificate.issuer}</b>
              </span>
              <span>
                AÃ±o: <b>{certificate.date}</b>
              </span>
            </div>
          </li>
        );
      })
    }
  </ul>
</section>

<style>
  ul {
    width: 100%;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 0.5em;
    margin-bottom: 50px;
  }

  li {
    position: relative;
    height: 200px;
    z-index: 2000;
    width: 100%;
  }

  li,
  .data {
    display: flex;
    flex-direction: column;
    gap: 0.5em;
  }

  .data {
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 1000;
    padding: 5px 10px;
    background-color: rgba(0, 0, 0, 0.6);
    color: rgb(216, 216, 216);
    width: 100%;
    margin: 0;
    opacity: 0;
    transition: opacity 0.2s;
  }

  a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    overflow: hidden;
  }

  a {
    position: absolute;
    top: 0;
    z-index: 2000;
    height: 100%;
  }

  img {
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 5px;
    transition: scale 0.3s;
  }

  li:hover {
    border: 1px solid rgba(0, 0, 0, 0.5);
  }

  li:hover .data {
    z-index: 2000;
    opacity: 1;
  }

  li:hover img {
    scale: 1.15;
    filter: blur(1px);
  }

  .name,
  span b {
    font-weight: bold;
  }

  @media (width < 700px) {
    li {
      height: 250px;
    }
  }

  @media print {
    ul {
      margin-bottom: 0;
    }
    li {
      position: relative;
      height: auto;
    }

    .data {
      position: relative;
      padding: 5px 0;
      width: 100%;
      opacity: 1;
    }

    a {
      position: relative;
      height: 100%;
    }
  }
</style>
