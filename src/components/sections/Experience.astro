---
import {work} from '../../../cv.json'
const principales = work.slice(0, 3);
const secundarios = work.slice(3);
---

<section>
    <h3>Experiencias (proyectos recientes)</h3>
    <ul class="principals-proyects">
        {
            principales.map(({startDate, endDate, name, position, url, summary}) => {
                return(
                    <li>
                         <article>
                            <header>
                                <div>
                                    {
                                    url == "" ? 
                                    <h4>{name}</h4> 
                                    :
                                    <a href={url} target="_blank">{name}</a>
                                    }
                                    <h5>
                                        {position}
                                    </h5>
                                </div>
                                <div>
                                    <time datetime={startDate} data-title={startDate}>{startDate} - </time>
                                    <time datetime={endDate} data-title={endDate}>{endDate}</time>
                                </div>
                            </header>
                            <p>
                                {summary}
                            </p>
                        </article>
                    </li>
                )
            })
        }
    </ul>
    <ul class="secondarys-proyects">
        {
            secundarios.map(({startDate, endDate, name, position, url, summary}) => {
                return(
                    <li>
                         <article>
                            <header>
                                <div>
                                    {
                                    url == "" ? 
                                    <h4>{name}</h4> 
                                    :
                                    <a href={url} target="_blank">{name}</a>
                                    }
                                    <h5>
                                        {position}
                                    </h5>
                                </div>
                                <div>
                                    <time datetime={startDate} data-title={startDate}>{startDate} - </time>
                                    <time datetime={endDate} data-title={endDate}>{endDate}</time>
                                </div>
                            </header>
                            <p>
                                {summary}
                            </p>
                        </article>
                    </li>
                )
            })
        }
    </ul>
    <button class="button-show-more" id="button-show-more">Ver mas</button>
</section>
<script>
    const buttonShowMore = document.getElementById('button-show-more') as HTMLButtonElement;
    const secondarysProyects = document.querySelector('.secondarys-proyects') as HTMLUListElement;


    buttonShowMore.addEventListener('click', () => {
        if(secondarysProyects.classList.contains('on')){
            secondarysProyects.classList.remove('on');
            buttonShowMore.textContent = 'Ver mas';
        } else {
            secondarysProyects.classList.add('on');
            buttonShowMore.textContent = 'Ver menos';
        }
    });
</script>

<style>

    .button-show-more{
        margin: 0 auto;
        padding: .5em 1em;
        font-size: 1em;
        border: 1px solid rgba(0, 0, 0, 0.05);
        border-radius: 5px;
        transition: background-color ease-in 0.1s;
        cursor: pointer;
    }


    .button-show-more:hover{
        background-color: rgba(0, 0, 0, 0.05);
    }
    
    .principals-proyects, .secondarys-proyects{
        display: flex;
        flex-direction: column;
        gap: 1.5em;
        width: 100%;
    }

    .secondarys-proyects{
        height: 0;
        overflow: hidden;
        margin-top: 40px;
        transition: height .3s ease;
    }

    .on{
        height: 300px;
        overflow: visible;
    }

    .principals-proyects > li, .secondarys-proyects > li{
        width: 100%;

    }

    header{
        display: flex;
        justify-content: space-between;
        width: 100%;
    }

    h4, a, h5{
        display: block;
        font-size: 1.2em;
        font-weight: 600;
        transition: transform ease .1s;
    }

    a:hover{
        color: rgba(0, 0, 0, 0.75);
        transform: scale(1.05);

    }

    h5{
        color: rgba(0, 0, 0, 0.75);
        margin-bottom: .5em;
        font-weight: 300;
    }

    @media (width <= 700px){
        .principals-proyects{
            padding-top: 25px;
        }
        h5{
            font-size: .9em;
        }
        .button-show-more{
            display: flex;
            align-items: center;
        }
    }

    @media print{
        h4{
            font-size: 1em;
        }
        
        a, h5{
            font-size: .9em;
        }

    }
</style>