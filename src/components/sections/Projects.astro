---
import {projects} from '../../../cv.json'
import GitHub from '../../icons/GitHub.astro'
---
<section>
    <h3>Proyectos Relevantes</h3>
    <ul>
        {
            projects.map(({name, description, highlights, url, active, github, isActiveAndUpdating}) => {
                return(
                    active && <li>
                        <article>                           
                                <header>
                                    <h4>
                                        <a href={url != "" ? url : github} title={`ver proyecto ${name}`} target="_blank">
                                            {name}
                                        </a>
                                        {active && <span
                                        class= {isActiveAndUpdating ? "green" : "parado"}>â€¢</span>}
                                        {github != "" && 
                                            <a href={github} title={`repositorio de github del proyecto ${name}`} target="_blank">
                                                <GitHub/>
                                            </a>
                                        }
                                    </h4>
                                    {!isActiveAndUpdating && <span></span>}
                                </header>
                                <p>{description}</p>
                                <footer>
                                    <ul>
                                        {
                                            highlights.map(highlight => {
                                                return(
                                                    <li>{highlight}</li>
                                                )
                                            })
                                        }
                                    </ul>
                                </footer>
                        </article>   
                    </li>
                )
            })
        }
    </ul>

</section>

<style>
    ul{
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1em;
    }

    section > ul > li{
        height: 250px;
        overflow: hidden;
        border-radius: 10px;

    }

    article{
        padding: 20px;
        border: 1px solid #0000000e;
        display: flex;
        flex-direction: column;
        gap: 1em;
        height: 250px;
        border-radius: 10px;
        overflow-y: scroll;
    }

    /* width */
    article::-webkit-scrollbar {
    width: 3px;
    }

    /* Track */
    article::-webkit-scrollbar-track {
    background: #f1f1f1;
    }

    /* Handle */
    article::-webkit-scrollbar-thumb {
    background: #888;
    }

    /* Handle on hover */
    article::-webkit-scrollbar-thumb:hover {
    background: #555;
    }

    header{
        flex: 1;
    }

    h4{
        font-size: 1.1em;
        display: flex;
        gap: 8px;
        align-items: center;
        margin-bottom: 5px;
    }

    h4 a{
        transition: transform ease .1s;
    }

    h4 a:hover{
        transform: scale(1.03);
        color: #000000b2;
    }

    h4 span{
        font-size: 1.2em;
        animation: fliker 1.8s ease-in-out infinite;
    }

    .green{
        color: rgb(31, 148, 31);
    }

    .parado{
        color: gray;
        animation: none;
    }

    p{
        font-size: .9em;
    }

    footer ul{
        display: flex;
        flex-wrap: wrap;
    }

    footer ul li{
        display: inline;
        background-color: #0000000e;
        padding: 5px 10px;
        border-radius: 10px;
        font-size: .9em;
        color: #0000009f;
    }

    @keyframes fliker{
        0%{
            opacity: 1;
            transform: scale(1);
        }

        50%{
            opacity: .25;
            transform: scale(.9)
        }

        100%{
            opacity: 1;
            transform: scale(1.1);
        }
    }
    
    @media (width <= 700px){
        
    }

    @media print {
        h4{
            font-size: .9em;
        }

        p{
            font-size: .7em;
        }

        footer ul li{
            background-color: #0000008a;
            padding: 0px;
            font-size: .55em;
        }

        article{
            height: 200px;
        }

    }

</style>